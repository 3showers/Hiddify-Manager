{
	"inbounds": [
		{
			"tag":"vless-ws-v1",
			"listen": "127.0.0.1",
			"listen_port":2022,
			"tcp_fast_open": true,
			"sniff": true,
			"sniff_override_destination": true,
			"domain_strategy": "prefer_ipv4",
			"proxy_protocol":true,	
			"type": "vless",
			"users": [
    		    {% for u in users %}
    				{"name": "{{ u['uuid'] }}@hiddify.com", "uuid": "{{ u['uuid'] }}"},
				{% endfor%}
  			],
			"transport": {
				"type": "ws",
				"path": "/{{ hconfigs['path_vless'] }}{{ hconfigs['path_ws'] }}",
				"early_data_header_name": "Sec-WebSocket-Protocol"
			},
			{%if hconfigs['mux_enable']%}
			"multiplex": {
                "enabled": true,
                "padding": {{ hconfigs['mux_padding_enable'] }},
                "brutal": {
                    "enabled": {{ hconfigs['mux_brutal_enable'] }},
                    "up_mbps": {{ hconfigs['mux_brutal_up_mbps'] }},
                    "down_mbps": {{ hconfigs['mux_brutal_down_mbps'] }}
                }
            },
			{%endif%}
		}	  
	]
}
